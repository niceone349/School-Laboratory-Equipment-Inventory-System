<Window x:Class="InventorySystem.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventorySystem"
        mc:Ignorable="d"
                Title="Add Category" Height="200" Width="250" ResizeMode="NoResize"
WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Enter Category Name:" FontSize="16" FontFamily="Century Gothic"/>
            <TextBox Name="CategoryTextBox" Margin="0,15" Height="30" FontSize="19"/>
            <Button Content="Add Category" Click="AddCategory_Click" Height="36" FontFamily="Century Gothic"/>
        </StackPanel>
    </Grid>
</Window>
