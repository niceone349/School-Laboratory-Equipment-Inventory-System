<Window x:Class="InventorySystem.AddItemExperimentPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventorySystem"
        mc:Ignorable="d"
          Title="Experiments" Height="386" Width="646" Loaded="Window_Loaded"  >
    <Grid Background="#FFA09D9D" >

        <DataGrid x:Name="DataGrid_Inventory" Margin="73,97,73,92" ColumnWidth="*" CanUserAddRows="False"/>
        <Label Content="Select Experiments that this item is Needed" HorizontalAlignment="Center" Margin="0,33,0,0" VerticalAlignment="Top" Height="59" Width="462" FontSize="22" Foreground="White" FontWeight="Bold"/>
        <Button Content="Add" BorderBrush="{x:Null}" Margin="536,291,25,26" Click="Button_Click_1" />
        <Button Content="Cancel" BorderBrush="{x:Null}" Margin="441,291,120,26" Click="Button_Click"/>
    </Grid>
</Window>
