<Page x:Class="InventorySystem.EquipmentTemplate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InventorySystem"
      mc:Ignorable="d" 
     
        Title="Equipment Templates" Height="720" Width="980" Loaded="Page_Loaded">
    <Grid Background="#FFA09D9D" Height="720" Width="980" Margin="0,0,0,56">

        <Button Content="Add Template" HorizontalAlignment="Left" Margin="382,183,0,0" VerticalAlignment="Top" Height="61" Width="150" Background="White" FontSize="18" Click="Button_Click"/>
        <Button Content="Update Template" HorizontalAlignment="Left" Margin="564,183,0,0" VerticalAlignment="Top" Height="61" Width="150" Background="White" FontSize="18" Click="Button_Click_1"/>
        <Button Content="Delete Template" HorizontalAlignment="Left" Margin="740,183,0,0" VerticalAlignment="Top" Height="61" Width="150" Background="White" FontSize="18" Click="Button_Click_2" />
        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Margin="154,200,0,0" TextWrapping="Wrap" Text="Search Template" VerticalAlignment="Top" Width="207" Height="26" FontSize="16" TextChanged="txtSearch_TextChanged" GotFocus="txtSearch_GotFocus" LostFocus="txtSearch_LostFocus"/>
        <DataGrid x:Name="DataGrid_Inventory" Margin="77,266,69,104" ColumnWidth="*" SelectionChanged="DataGrid_Inventory_SelectionChanged" CanUserAddRows="False"/>
        <TextBlock x:Name="txtSelectedTemplate" HorizontalAlignment="Center" Margin="0,98,0,0" VerticalAlignment="Top" Height="61" Width="552" Background="White" FontSize="36" TextAlignment="Center"/>
        <Label Content="Equipment Template" HorizontalAlignment="Center" Margin="0,21,0,0" VerticalAlignment="Top" Height="64" Width="380" FontSize="36" Foreground="White" FontWeight="Bold"/>
        <Image HorizontalAlignment="Left" Height="24" Margin="121,201,0,0" VerticalAlignment="Top" Width="25" Source="/magnifying-glass.png"/>

    </Grid>
</Page>
