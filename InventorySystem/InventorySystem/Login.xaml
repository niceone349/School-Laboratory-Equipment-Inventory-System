<Window x:Class="InventorySystem.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventorySystem"
        mc:Ignorable="d"
            Title="Login" Height="450" Width="800"
    Background="Gray" WindowStartupLocation="CenterScreen">

    <Grid>
        <Canvas HorizontalAlignment="Center" Height="360" VerticalAlignment="Center" Width="712">
            <Rectangle Width="712" Height="360" Fill="Silver"/>
            <Label Content="Admin Login" Canvas.Left="293" Canvas.Top="61" FontSize="20" FontWeight="DemiBold"/>

            <!-- Username Input -->
            <Border Canvas.Left="192" Canvas.Top="124" Width="328" Height="24" CornerRadius="10" 
        Background="White" BorderBrush="Gray" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Top">
                <TextBox x:Name="UsernameTextBox" Height="22" Background="Transparent" 
             BorderThickness="0" VerticalContentAlignment="Center" Margin="9,0,9,0" AutomationProperties.Name="" />
            </Border>

            <!-- Password Input -->
            <Border Canvas.Left="192" Canvas.Top="168" Width="328" Height="24" CornerRadius="10" 
        Background="White" BorderBrush="Gray" BorderThickness="1">
                <PasswordBox x:Name="PasswordBox" Height="22" Background="Transparent" 
                 BorderThickness="0" VerticalContentAlignment="Center" Margin="9,0,9,0" AutomationProperties.HelpText="Password"/>
            </Border>

            <!-- Login Button -->
            <Button x:Name="LoginButton" Content="Login" Canvas.Left="192" Canvas.Top="219" Width="100" Height="30" 
        Background="DodgerBlue" Foreground="White" BorderThickness="0"
        FontWeight="Bold" Click="Login_Click"/>
            <Label Content="Username:" Canvas.Left="192" Canvas.Top="100" HorizontalAlignment="Center" VerticalAlignment="Top" Width="65"/>
            <Label Content="Password:" Canvas.Left="192" Canvas.Top="145" Width="65" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>
    </Grid>
</Window>
