<Page x:Class="InventorySystem.ProductManagements"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InventorySystem"
      mc:Ignorable="d"
      Title="Product Management" Height="720" Width="980" Loaded="Page_Loaded">
    <Grid Background="#FFA09D9D" Width="980" Margin="0,0,0,56">

        <Button Content="Add Item" HorizontalAlignment="Left" Margin="382,183,0,0" VerticalAlignment="Top" Height="61" Width="150" Background="White" FontSize="18" Click="Button_Click"/>
        <Button Content="Update Item" HorizontalAlignment="Left" Margin="564,183,0,0" VerticalAlignment="Top" Height="61" Width="150" Background="White" FontSize="18" Click="Button_Click_1"/>
        <Button Content="Delete Item" HorizontalAlignment="Left" Margin="740,183,0,0" VerticalAlignment="Top" Height="61" Width="150" Background="White" FontSize="18" Click="Button_Click_2"/>
        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Margin="154,200,0,0" TextWrapping="Wrap" Text="Search Item" VerticalAlignment="Top" Width="207" Height="26" GotFocus="TextBox_GotFocus" TextChanged="txtSearch_TextChanged" LostFocus="txtSearch_LostFocus" FontSize="16"/>
        <DataGrid x:Name="DataGrid_Inventory" Margin="77,266,69,47" ColumnWidth="*" SelectionChanged="DataGrid_Inventory_SelectionChanged" CanUserAddRows="False"/>
        <TextBlock x:Name="txtSelectedItem" HorizontalAlignment="Center" Margin="0,98,0,0" VerticalAlignment="Top" Height="61" Width="552" Background="White" FontSize="36" TextAlignment="Center"/>
        <Label Content="Product Management" HorizontalAlignment="Center" Margin="0,21,0,0" VerticalAlignment="Top" Height="64" Width="380" FontSize="36" Foreground="White" FontWeight="Bold"/>
        <Image HorizontalAlignment="Left" Height="24" Margin="121,201,0,0" VerticalAlignment="Top" Width="25" Source="/magnifying-glass.png"/>


    </Grid>
</Page>
