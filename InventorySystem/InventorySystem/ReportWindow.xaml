<Window x:Class="InventorySystem.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventorySystem"
        mc:Ignorable="d"
        Title="Report" Height="149" Width="400">
    <Grid Margin="0,1,0,0" Background="#FFA3A2A2" Height="129" VerticalAlignment="Top">
        <TextBlock Text="Report Details" HorizontalAlignment="Center" Margin="0,10,0,0" FontFamily="Arial Black" Height="21" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="ReportStatusTextBox" Margin="17,77,252,0" Height="20" VerticalAlignment="Top"/>
        <Button Content="Submit" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,76,25,0"
                Width="80" Click="SubmitButton_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <TextBox x:Name="QuantityTextbox" HorizontalAlignment="Left" Height="20" Margin="161,77,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="110"/>
        <TextBlock HorizontalAlignment="Left" Height="16" Margin="21,54,0,0" TextWrapping="Wrap" Text="Report Status :" VerticalAlignment="Top" Width="107" FontFamily="Arial Black"/>
        <TextBlock HorizontalAlignment="Center" Height="21" Margin="0,53,0,0" TextWrapping="Wrap" Text="Quantity :" VerticalAlignment="Top" Width="70" FontFamily="Arial Black" FontSize="12"/>
    </Grid>
</Window>
